<!-- Loop over each object in the blogs array -->
{{#each blogs as |blog| }}
<div class="row mb-4 blog">
  <div class="col-md-5">
    <h2>
      <a href="/blog/{{blog.id}}" style="color: rgb(19, 131, 141)">{{blog.title}}</a>
    </h2>
    {{!-- <p>
      <span class="blog-content">{{blog.content}}</span>
    </p> --}}
    <p class="posted-blogs">Posted by {{blog.user.username}} on {{format_date blog.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p class="posted-blogs">
      {{blog.content}}
    </p>
  </div>
</div>
{{/each}}
