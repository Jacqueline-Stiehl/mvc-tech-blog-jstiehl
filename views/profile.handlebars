<div class="row">
  <div class="col-auto">
      <h2>Hello, &nbsp;{{username}}</h2>
    <h2>Your Dashboard:</h2>
    {{!-- <button type="submit" class="btn btn-newblog" name="New Blog Post"/> --}}
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a Blog Entry:</h3>
    <form class="form new-blog-form">
      <div class="form-group">
        <label for="blog-title">Blog entry title:</label>
        <input class="form-input" type="text" id="blog-title" name="blog-title" />
      </div>
      <div class="form-group">
        <label for="blog-content">Content:</label>
        <textarea class="form-input" id="blog-content" name="blog-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

{{#if blogs.length}}
<div class="col-md-6 blog-list">
    <h3>Blog Entries:</h3>

    {{#each blogs as |blog|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blog/{{blog.id}}">{{blog.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{blog.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  {{/if}}
</div>
</div>

<script src="./js/profile.js"></script>
