
<div id="{{id}}" class="blog-id text-center">
    <h2>{{title}}</h2>
    <p class="update-blog"> {{content}}</p>
    <p class="update-blog">Posted by {{user.username}} on {{format_date date_created}}</p>
    <div class="form-group">
        <label for="blog-comment">Add a comment:</label>
        <textarea class="form-input" id="blog-comment" name="blog-comment"></textarea>
      </div>
    <p>
        <button id="new-comment"class="btn btn-primary">Submit Comment</button>
    </p>
</div>

{{#each comments as |comment| }}
<div class="row mb-4 user-comments">
  <div class="col-md-7">
    <p>
      {{comment.content}}
    </p>
  </div>
</div>
{{/each}}

<script src="/js/comment.js"></script>