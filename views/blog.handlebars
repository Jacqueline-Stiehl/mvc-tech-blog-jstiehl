<div id="{{id}}" class="blog-id text-center">
    <h2>{{title}}</h2>
    <p>{{content}}</p>
    <p>Posted by {{user.name}} on {{format_date date_created}}</p>
    {{!-- need to add comment stuff here --}}
    <div class="form-group">
        <label for="blog-comment">Content:</label>
        <textarea class="form-input" id="blog-comment" name="blog-comment"></textarea>
      </div>
    <p>
        <button id="new-comment"class="btn btn-primary">Submit Comment</button>
    </p>
</div>

{{#each comments as |comment| }}
<div class="row mb-4 comment">

  <div class="col-md-7">
    <p>
      {{comment.content}}
    </p>
  </div>
</div>
{{/each}}

